@using BussinessLogic;
<html>

<head>

    <!--JQuery-->
    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Rokkitt:700|Oxygen:400,700' rel='stylesheet' type='text/css'>

    <!--Import materialize.css-->
    <link rel="stylesheet" href="materialize.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/js/materialize.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link rel="stylesheet" href="css/style.css">
    
</head>

<body>
    <!-- Load Base -->
    <div id="base"></div>
    <script>
        $("#base").load("base.html");
    </script>

    <!-- Content -->
    <div class="container">
        @{
            if (IsPost) {
                string inputUsername = Request.Form["user_name"];
                string inputPassword = Request.Form["password"];

                FrontEnd obj = new FrontEnd();
                obj.UserName = inputUsername;
                obj.Password = inputPassword;

                string processedUsername = obj.UserName;
                string processedPassword = obj.Password;

        <text>
            You entered: <br />
            UserName: @inputUsername <br />
            Password: @inputPassword <br />
            Proccessed: <br />
            UserName: @processedUsername <br />
            Password: @processedPassword <br />
        </text>
        }
        }
        <form class="col s12" method="post"><!-- action="action_page.php" -->
            <div class="row">
                <h2>Login</h2>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input name="user_name" type="text" class="validate">
                    <label for="first_name">Username or Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input name="password" type="password" class="validate">
                    <label for="password">Password</label>
                </div>
            </div>
            <div class="row ">
                <div class="col s12 m6 l4">
                    <button class="btn waves-effect waves-light">
                        <a href="newAccount.html" class="white-text">forgot password</a>
                    </button>
                </div>
                    <div class="col s12 m6 l4">
                    <button class="btn waves-effect waves-light">
                        <a href="newAccount.html" class="white-text">Forgot User ID</a>
                    </button>
                </div>
                <div class="col offset-s6 offset-m9 offset-l1">
                    <button class="btn-large waves-effect waves-light" type="submit" name="action">login</button>
                </div>
            </div>
            <div class="row ">
                <div class="col s3">
                    <h4>New User?</h4>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <button class="btn waves-effect waves-light">
                        <a href="newAccount.html" class="white-text">create new acount</a>
                    </button>
                </div>
            </div>

        </form>
    </div>

</body>

</html>